{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build Service Applications",
        "type": "shell",
        "command": "mvn clean verify -f ./service-application/pom.xml",
        "group": "build",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      },
      {
        "label": "Run Jakarta-RS Service App",
        "type": "shell",
        "command": "java -jar ./service-application/org.fipro.service.app.jakartars/target/jakartars-app.jar",
        "group": "test",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      },
      {
        "label": "Run Remote Service App",
        "type": "shell",
        "command": "java -jar ./service-application/org.fipro.service.app.rs/target/rs-app.jar",
        "group": "test",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      },
      {
        "label": "Build Theia App",
        "type": "shell",
        "command": "yarn prepare",
        "group": "build",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      },
      {
        "label": "Run Theia App",
        "type": "shell",
        "command": "yarn start:browser",
        "group": "build",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      },
      {
        "type": "npm",
        "script": "watch",
        "path": "vscode-extension",
        "problemMatcher": "$ts-webpack-watch",
        "isBackground": true,
        "presentation": {
          "reveal": "never",
          "group": "watchers"
        },
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "type": "npm",
        "script": "watch-tests",
        "path": "vscode-extension",
        "problemMatcher": "$tsc-watch",
        "isBackground": true,
        "presentation": {
          "reveal": "never",
          "group": "watchers"
        },
        "group": "build"
      },
      {
        "label": "tasks: watch-tests",
        "dependsOn": [
          "npm: watch",
          "npm: watch-tests"
        ],
        "problemMatcher": []
      }
    ]
  }