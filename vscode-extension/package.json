{
	"name": "modify-extension",
	"displayName": "modify_extension",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.92.0"
	},
	"categories": [
		"Other"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "modify-extension.modify",
				"title": "Modify selection"
			}
		],
		"configuration": [
			{
				"title": "Modifier Extension",
				"properties": {
					"modifier.service.baseuri": {
						"type": "string",
						"description": "The base URL to the modifier service. Defaults to 'http://localhost:8282/' which is the base URI of the Remote Service application accessible inside a Docker container.",
						"default": "http://localhost:8282/"
					},
					"modifier.service.uri": {
						"type": "string",
						"description": "The URL suffix of the modifier service to use.",
						"default": "uppercase/",
						"enum": [
							"camelcase/",
							"inverter/",
							"uppercase/"
						],
						"enumDescriptions": [
							"Jakarta-RS Service: Convert selected text to camelcase",
							"Jakarta-RS Service: Invert the selected text",
							"Jakarta-RS Service: Convert selected text to uppercase"
						]
					}
				}
			}
		]
	},
	"scripts": {
		"prepare": "yarn run clean && yarn run webpack",
		"clean": "rimraf dist",
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"package-ext": "vsce package --no-yarn --baseImagesUrl https://fake.url.com/",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.7",
		"@types/node": "20.x",
		"@types/vscode": "^1.92.0",
		"@typescript-eslint/eslint-plugin": "^7.14.1",
		"@typescript-eslint/parser": "^7.11.0",
		"@vscode/test-cli": "^0.0.9",
		"@vscode/test-electron": "^2.4.0",
		"eslint": "^8.57.0",
		"rimraf": "latest",
		"ts-loader": "^9.5.1",
		"typescript": "~5.5.2",
		"webpack": "^5.92.1",
		"webpack-cli": "^5.1.4"
	},
	"dependencies": {
		"cross-fetch": "^4.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/fipro78/monolith-single_deployment.git",
		"directory": "vscode-extension"
	}
}
